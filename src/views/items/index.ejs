<%- include('../partials/header') %>


    <div class="container mt-4">
        <div class="container mt-5">
            <h1 class="text-center mb-4">Library Items</h1>
            <div class="mb-3">
                <form action="/items/search" method="GET" class="d-flex">
                    <input type="text" name="q" class="form-control me-2" placeholder="Search items...">
                    <button type="submit" class="btn btn-primary">Search</button>
                </form>
            </div>
            <div class="row">
                <% if (items.length===0) { %>
                 <h1 class="text-center py-5 text-warning"> No items in the libaray</h1>
                <% }else{ %>
                    <% items.forEach(function(item) { %>
                        <div class="col-md-4 mb-4">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title"><%= item.title %></h5>
                                    <h6 class="card-subtitle mb-2 text-muted"><%= item.author %></h6>
                                    <p class="card-text">
                                        Genre: <%= item.genre %><br>
                                        Type: <%= item.itemType %><br>
                                        <% if (item.itemType === 'Book') { %>
                                            ISBN: <%= item.isbn %>
                                        <% } else { %>
                                            Issue: <%= item.issueNumber %>
                                        <% } %>
                                    </p>
                                    <div class="d-flex justify-content-between">
                                        <a href="/items/<%= item.id %>" class="btn btn-primary btn-sm">View</a>
                                        <a href="/items/<%= item.id %>/edit" class="btn btn-warning btn-sm">Edit</a>
                                        <form action="/items/<%= item.id %>/delete" method="POST">
                                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                    <% } %>
                
               
            </div>
        </div>
    </div>
    <%- include('../partials/footer') %>






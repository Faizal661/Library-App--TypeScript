<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Library Management System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="../../public/css/style.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="../../public/js/main.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/">ðŸ“š Library</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link text-light" href="/">All Items</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" href="/items/create">Add Item</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="container mt-5">
            <h1 class="text-center mb-4">Library Items</h1>
            <div class="mb-3">
                <form action="/items/search" method="GET" class="d-flex">
                    <input type="text" name="q" class="form-control me-2" placeholder="Search items...">
                    <button type="submit" class="btn btn-primary">Search</button>
                </form>
            </div>
            <div class="row">
                <% if (items.length===0) { %>
                 <h1 class="text-center"> No items in the libaray</h1>
                <% }else{ %>
                    <% items.forEach(function(item) { %>
                        <div class="col-md-4 mb-4">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title"><%= item.title %></h5>
                                    <h6 class="card-subtitle mb-2 text-muted"><%= item.author %></h6>
                                    <p class="card-text">
                                        Genre: <%= item.genre %><br>
                                        Type: <%= item.itemType %><br>
                                        <% if (item.itemType === 'Book') { %>
                                            ISBN: <%= item.isbn %>
                                        <% } else { %>
                                            Issue: <%= item.issueNumber %>
                                        <% } %>
                                    </p>
                                    <div class="d-flex justify-content-between">
                                        <a href="/items/<%= item.id %>" class="btn btn-primary btn-sm">View</a>
                                        <a href="/items/<%= item.id %>/edit" class="btn btn-warning btn-sm">Edit</a>
                                        <form action="/items/<%= item.id %>/delete" method="POST">
                                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                    <% } %>
                
               
            </div>
        </div>
    </div>

    <footer class="footer mt-auto py-3 bg-dark text-white">
        <div class="container text-center">
            <!-- <span class="text-muted">&copy; 2024 Library Management System | Designed with ðŸ’™</span> -->
        </div>
    </footer>

</body>
</html>




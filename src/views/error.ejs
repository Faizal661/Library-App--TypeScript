<%- include('partials/header') %>
    <style>
        .cen {
            font-family: Arial, sans-serif;
            padding-top: 20vh;
        }

        .error-container {
            
            background-color: #f0f0f0;
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .error-title {
            color: #dc3545;
            margin-bottom: 1rem;
        }

        .error-message {
            color: #666;
            margin-bottom: 1rem;
        }

        .back-link {
            display: inline-block;
            padding: 10px 20px;
            background-color: #157dec;
            color: white;
            text-decoration: none;
            border-radius: 5px;
        }
    </style>
    <div class="cen">
        <div class="container">
            <div class="error-container">
                <h1 class="error-title">
                    <%= typeof error !=='undefined' ? 'Error' : 'Oops!' %>
                </h1>
                <p class="error-message">
                    <%= typeof error !=='undefined' ? error : 'Something went wrong' %>
                        <% if (typeof message !=='undefined' ) { %>
                            <br>
                            <%= message %>
                                <% } %>
                </p>
                <a href="/" class="back-link">Go to Home</a>
            </div>
        </div>
    </div>

    </body>

    </html>